<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uneebamerhenryaaronabdullah.uottawa.com.ca.cookhelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterScreen" />
        <activity android:name=".ShoppingList" />
        <activity android:name=".Recipe" />
        <activity android:name=".AddRecipe" />
        <activity android:name=".FindRecipe" />
        <activity android:name=".MainMenu" />
        <activity android:name=".SearchResults"
            android:parentActivityName=".FindRecipe" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uneebamerhenryaaronabdullah.uottawa.com.ca.cookhelper.FindRecipe" />
        <activity android:name=".helpActivity" />
        <activity android:name=".IngredientActivity"
            android:parentActivityName=".AddRecipe">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uneebamerhenryaaronabdullah.uottawa.com.ca.cookhelper.AddRecipe" />
        </activity>
    </application>

</manifest>